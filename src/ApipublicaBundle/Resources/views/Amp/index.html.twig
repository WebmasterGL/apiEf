    <header>
        <amp-img id="img1" src="https://{{ cnd_repository }}{{ amp_logo_ef }}" width="216" height="23"></amp-img>
    </header>
    </br>
    <center>
      <amp-ad width=320 height=50 type="doubleclick" data-slot="/77835600/ef_{{section}}">
        <div placeholder></div>
        <div fallback></div>
      </amp-ad>
    </center>
    <h3>{{ category }}</h3>
    <h1>{{ title }}</h1>
    {% if author_element_top is not defined %}
        {% if bullets[0] is defined %}
            <div id="Sumario">{{ bullets[0] }}</div>
        {% endif %}
        <div id="MetaDatos">
            {% if element_top is defined %}
                {% if authors is iterable %}
                    {% for author in authors %} {{ author }} | {% endfor %}
                {% else %}
                    {{ authors }} |
                {% endif %}
            {% endif %}
            {{ published_at }}
            <br/>
            <span>Última actualización</span>
            <span class="publishDate" data-timestamp="{{ updated_timestamp }}">
                {{ updated_at }}
            </span>
        </div>
    {% endif %}
    <!--header-->
    {% if element_top is defined %}
        <figure>
            {% if element_top.type == "video" %}
                <amp-vimeo data-videoid="{{ element_top.item }}" layout="responsive" width="500" height="300">
                </amp-vimeo>
            {% elseif element_top.type == "image" and element_top.item is defined %}
                <amp-img src="https://{{ element_top.item }}" width="900" height="600" layout="responsive">
                </amp-img>
            {% elseif element_top.type == "html" %}
                {{ element_top.item | raw }}
            {% endif %}
        </figure>
    {% elseif author_element_top is defined %}
        <amp-img src="https://{{ cnd_repository  }}{{ author_element_top.image }}" width="90" height="120" class="ImgOpinion">
        </amp-img>
        <span id="columnista_nombre">{{ author_element_top.name }}</span>
        <span id="columna_nombre">{{ author_element_top.columna }}</span>
        {% if author_element_top.facebook %}
            <span id="columnista_facebook"><a href="https://www.facebook.com/{{ author_element_top.facebook }}"
                                              target="_blank">
                    {{ author_element_top.facebook }}</a></span>
        {% endif %}
        {% if author_element_top.twitter %}
            <span id="columnista_twitter"><a href="https://www.twitter.com/{{ author_element_top.twitter }}"
                                             target="_blank">
                    {{ author_element_top.twitter }}</a></span>
        {% endif %}
        {% if author_element_top.linkedin %}
            <span id="columnista_linkedin"><a href="https://www.linkedin.com/in/{{ author_element_top.linkedin }}"
                                              target="_blank">
                    {{ author_element_top.name }}</a></span>
        {% endif %}
        {% if author_element_top.googleplus %}
            <span id="columnista_googleplus"><a href="https://plus.google.com/+elfinanciero" target="_blank">
                    El Financiero</a></span>
        {% endif %}
        {% if author_element_top.email is not empty %}
            <span id="columnista_correo"><a href="mailto:{{ author_element_top.email }}"
                                            target="_blank">{{ author_element_top.email }}</a></span>
        {% endif %}
        <div class="clear"></div>
        <div id="MetaDatos">
            {{ published_at }}
            <br/>
            <span>Última actualización</span>
            <span class="publishDate" data-timestamp="{{ updated_timestamp }}">
                {{ updated_at }}
            </span>
        </div>
        {% if bullets[0] is defined %}
            <div id="Sumario">{{ bullets[0] }}</div>
        {% endif %}
    {% endif %}
    <!-- end header-->
