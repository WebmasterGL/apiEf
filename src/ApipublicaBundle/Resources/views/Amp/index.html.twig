        <style amp-custom>
            body, html {
                font-size: 14px;
                color: #222222;
                text-rendering: optimizeLegibility;
                -webkit-font-smoothing: antialiased;
            }

            body {
                padding-left: 15px;
                padding-right: 15px;
            }

            header {
                width: 100vw;
                margin-left: -15px;
                z-index: 99;
                height: 46px; /*2.5rem*/
                background: #042add;
                background: -moz-linear-gradient(45deg, #042add 0%, #003399 100%);
                background: -webkit-linear-gradient(45deg, #042add 0%, #003399 100%);
                background: linear-gradient(45deg, #042add 0%, #003399 100%);
                filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#042add', endColorstr='#003399', GradientType=1);
            }

            h1 {
                font-family: 'Roboto', sans-serif;
                font-size: 36px;
                line-height: 39px;
                color: #111111;
                font-weight: bold;
                margin: 5px auto 10px;
            }

            h3 {
                font-family: 'Roboto', sans-serif;
                font-weight: bold;
                background-color: #111;
                color: #FFFFFF;
                text-transform: uppercase;
                display: inline-block;
                padding: 0.1rem .75rem 0;
                margin-top: 0.75rem;
                height: 2rem;
                line-height: 2rem;
                font-size: 1rem;

                margin-bottom: 0px;
            }

            h3:first-of-type {
                margin-top: 15px;
            }

            div#Sumario {
                font-size: 18px;
                line-height: 25px;
                margin-bottom: 0.75rem;
                color: #111111;
                position: relative;
                font-family: 'Roboto', sans-serif;
                font-weight: normal;
                padding-left: 0;
                padding-bottom: 20px;
                border-bottom: 1px solid #ccc;
            }

            /* metadatos */
            div#MetaDatos {
                font-family: 'Roboto', sans-serif;
                font-size: 1rem;
                font-weight: normal;
                display: inline-block;
                margin: 10px 0;
                color: #666;
            }

            div#MetaDatos span {
                text-transform: none;;
                margin: .5rem .75rem 0 0;
                display: inline-block;
                font-size: 0.875rem;
            }

            div#MetaDatos .box-title {
                display: none;
            }

            /*Quote*/
            .quote__block {
                margin: 40px 0;
            }

            .quote__block div {
                font-family: 'Roboto', sans-serif;
                font-weight: 700;
                color: #000000;
                font-size: 26px;
                line-height: 31px;
            }

            .quote__block .quote__open {
                display: none;
            }

            .quote__block .quote__credit {
                font-family: 'Roboto', sans-serif;
                color: #666666;
                font-weight: 700;
                font-size: 17px;
                line-height: 21px;
            }

            /* text content */
            p {
                font-family: 'Merriweather', serif;
                font-size: 1.15rem;
                line-height: 2rem;
                font-weight: 400;
                color: #222222;
            }

            a, a:visited, a:active {
                font-size: 1.15rem;
                text-decoration: none;
                line-height: 15px;
                color: #039;
            }

            figure {
                margin-left: 0;
                margin-right: 0;
            }

            /* //////////// */
            /* header logo  */
            amp-img#img1 {
                align-items: center;
                margin-top: 10px;
            }

            /* /////////  OPINION  //////// */
            .ImgOpinion {
                display: block;
                float: left;
                margin-right: 10px;
                background: #eee;
            }

            .clear {
                clear: both;
            }

            #columnista_nombre {
                font-family: 'Roboto', sans-serif;
                font-size: 22px;
                line-height: 26px;
                font-weight: bold;
                display: block;
            }

            #columna_nombre {
                font-family: 'Merriweather', serif;
                font-size: 18px;
                font-style: italic;
                margin: 0 0 10px;
                display: block;
            }

            #columnista_facebook {
                font-family: 'Roboto', sans-serif;
                font-weight: normal;
                display: block;
            }

            #columnista_facebook a {
                font-size: 14px;
                background: url({{cdn_repository}}/uploads/2018/01/04/48db71587d1515105800.png) no-repeat;
                background-size: cover;
                width: 22px;
                height: 22px;
                display: inline-block;
                border-radius: 2px;
                text-indent: -9999px;
                float: left;
                margin-right: 10px;
            }

            #columnista_twitter {
                font-family: 'Roboto', sans-serif;
                font-weight: normal;
                display: block;
            }

            #columnista_twitter a {
                font-size: 14px;
                background: url({{cdn_repository}}/uploads/2018/01/04/2912bbeedc1515105898.png) no-repeat;
                background-size: cover;
                width: 22px;
                height: 22px;
                display: inline-block;
                border-radius: 2px;
                text-indent: -9999px;
                float: left;
                margin-right: 10px;
            }

            #columnista_linkedin {
                font-family: 'Roboto', sans-serif;
                font-weight: normal;
                display: block;
            }

            #columnista_linkedin a {
                font-size: 14px;
                background: url({{cdn_repository}}/uploads/2018/01/04/dc20d1211f1515105872.png) no-repeat;
                background-size: cover;
                width: 22px;
                height: 22px;
                display: inline-block;
                border-radius: 2px;
                text-indent: -9999px;
                float: left;
                margin-right: 10px;
            }

            #columnista_googleplus {
                font-family: 'Roboto', sans-serif;
                font-weight: normal;
                display: block;
            }

            #columnista_googleplus a {
                font-size: 14px;
                background: url({{cdn_repository}}/uploads/2018/01/04/87ae6fb6311515105843.png) no-repeat;
                background-size: cover;
                width: 22px;
                height: 22px;
                display: inline-block;
                border-radius: 2px;
                text-indent: -9999px;
                float: left;
                margin-right: 10px;
            }

            #columnista_correo {
                font-family: 'Roboto', sans-serif;
                font-weight: normal;
                display: block;
            }

            #columnista_correo a {
                font-size: 14px;
                background: url({{cdn_repository}}/uploads/2018/01/04/177da570351515105726.png) no-repeat;
                background-size: cover;
                width: 22px;
                height: 22px;
                display: inline-block;
                border-radius: 2px;
                text-indent: -9999px;
                float: left;
                margin-right: 10px;
            }

            amp-ad[type="teads"] {
                margin: auto
            }

            amp-embed {
              border-top: 3px solid #aaa;
              margin-top: -4px;
              top: 20px;
            }

            amp-sticky-ad {
                max-height: 100px;
                width: 100%;
                opacity: 1;
            }

            .amp-flying-carpet-text-border {
                background-color: #000;
                color: #fff;
                text-align: center;
            }

            .Formulario400 {
              height:400px;
            }
            .Formulario500 {
             height:500px;
            }
            .Formulario550 {
              height:550px;
            }
            .Formulario600 {
              height:600px;
            }
            .Formulario650 {
              height:650px;
            }
        </style>
        <script async src="https://cdn.ampproject.org/v0.js"></script>
